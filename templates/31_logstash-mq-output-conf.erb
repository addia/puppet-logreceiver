# Logstash - log-receiver
#   -  Output into RabbitMQ
#   -  this config File <%= @config_output %>
#   -  this config file lives in <%= @config_dir %>
#
#
output {
  rabbitmq {
    host => "<%= @rabbit_address %>"
    port => 5671
    vhost => "lr-hare"
    exchange => "logstash"
    exchange_type => "topic"
    durable => true
    persistent => true
    key => "<%= @passkey %>"
    user => "logstash"
    password => "<%= @password %>"
    ssl => true
    ssl_certificate_path => "<%= @ssl_dir %>/<%= @rabbit_p12 %>"
    ssl_certificate_password => ""
  }
}


