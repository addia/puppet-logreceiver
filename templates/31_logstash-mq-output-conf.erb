# Logstash - log-receiver
#   -  Output into RabbitMQ
#   -  this config File <%= @configfile %>
#   -  this config file lives in <%= @config_dir %>
#
#
output {
  rabbitmq {
    exchange => "logstash"
    # queue => "log-item"
    host => "<%= @rabbit_address %>"
    vhost => "lr-hare"
    exchange_type => "topic"
    key => "<%= @passkey %>"
    user => "logstash"
    password => "<%= @password %>"
    durable => true
    persistent => true
    ssl => true
    port => 5671
    verify_ssl => true
    ssl_cert => "<%= @rabbitmq_crt %>"
    ssl_key => "<%= @rabbitmq_key %>"
  }
}


